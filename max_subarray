def max_subarray(arr):
    """
    Finds the contiguous subarray with the largest sum 
    in the given list of integers and returns that sum.

    Args:   
        arr (List[int]): A list of integers.        
    Returns:
        int: The sum of the contiguous subarray with the largest sum.
    """
    max_current = max_global = arr[0]
    
    for i in range(1, len(arr)):
        max_current = max(arr[i], max_current + arr[i])
        if max_current > max_global:
            max_global = max_current
            
    return max_global

if __name__ == "__main__":
    # Example usage
    my_list = [-2,1,-3,4,-1,2,1,-5,4]
    result = max_subarray(my_list)
    print(f"The maximum subarray sum is: {result}")
    